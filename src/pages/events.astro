---
import EventSummaryCard from "@components/events/EventSummaryCard.astro";
import Layout from "@layouts/Default.astro";
import { getCollection } from "astro:content";

const events = await getCollection("events").then((events) =>
    events.sort((a, b) => b.data.date.getTime() - a.data.date.getTime()),
);
---

<Layout
    title="Events"
    pageTitle="Valerio Como | Events"
    description="See upcoming and past events Valerio took part in as a speaker."
>
    <main class="bg-yellow p-6">
        <ul class="grid md:grid-cols-3 2xl:grid-cols-4 gap-8">
            {
                events.map((event) => (
                    <li>
                        <EventSummaryCard event={event} />
                    </li>
                ))
            }
        </ul>
    </main>
</Layout>
